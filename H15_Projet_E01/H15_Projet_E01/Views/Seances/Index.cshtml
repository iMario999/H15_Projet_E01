@model IEnumerable<H15_Projet_E01.Models.Seance>

@{
    ViewBag.Title = "Les séances à venir";
}

<h2>Les séances à venir</h2>

<p>
    @Html.ActionLink("Demander une séance", "Create")
</p>

<ul>
    <li>@Html.ActionLink("Affichage brute", ".")</li>
    <li>@Html.ActionLink("Afficher seulement les séances en atente", ".", new { enAttente = true })</li>
    <li>@Html.ActionLink("Afficher seulement les séances réservées", ".", new { enAttente = false })</li>
</ul>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateSeance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HeureSeance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ville)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Commentaire)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FactureID)
        </th> 
        <th>
            @Html.DisplayNameFor(model => model.Agent.Nom)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @if (item.DateSeance == null)
        {
            <td>
                En attente
            </td>
             <td>
                 En attente
            </td>
        }
        else
        {
        <td>
            @Html.DisplayFor(modelItem => item.DateSeance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HeureSeance)
        </td>
        }
       

        <td>
            @Html.DisplayFor(modelItem => item.Adresse)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ville)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Commentaire)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FactureID)
        </td>
      
        <td>
            @Html.DisplayFor(modelItem => item.Agent.Nom)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SeanceID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SeanceID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SeanceID })
        </td>
    </tr>
}

</table>
